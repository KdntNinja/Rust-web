{{#*inline "page"}}
    <div class="py-6">
        <h1 class="text-3xl font-bold text-gray-800 mb-6">Your Orders</h1>
        
        <div class="bg-white rounded-lg shadow-md p-6 mb-6">
            <div class="flex justify-between items-center mb-4">
                <h2 class="text-xl font-semibold">Order History</h2>
                <a href="/dashboard/new-order" class="inline-flex items-center bg-indigo-600 text-white hover:bg-indigo-700 py-2 px-4 rounded-lg">
                    <i class="fas fa-plus mr-2"></i> New Order
                </a>
            </div>
            
            <div class="overflow-x-auto">
                <table class="min-w-full bg-white">
