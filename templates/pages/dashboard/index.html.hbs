{{#*inline "page"}}
    <style>
        /* Dashboard specific styles */
        .stat-card {
            transition: transform 0.3s ease;
        }
        .stat-card:hover {
            transform: translateY(-5px);
        }
        .activity-item {
            transition: background-color 0.2s ease;
        }
        .activity-item:hover {
            background-color: rgba(79, 70, 229, 0.05);
        }
    </style>

    <div class="py-6">
        <h1 class="text-3xl font-bold text-center text-gray-800 mb-6">Your Subscription Dashboard</h1>
        
        <div class="bg-white rounded-lg shadow-md p-6 mb-6">
            <div class="flex justify-between items-center mb-4">
                <h2 class="text-2xl font-semibold">Active Subscription</h2>
                <span class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm">Premium Plan</span>
            </div>
            <div class="grid md:grid-cols-3 gap-4 mb-4">
                <div class="border rounded-lg p-4 stat-card">
                    <div class="text-gray-600 text-sm mb-1">Next Billing Date</div>
                    <div class="font-semibold">October 15, 2023</div>
                </div>
                <div class="border rounded-lg p-4 stat-card">
                    <div class="text-gray-600 text-sm mb-1">Monthly Rate</div>
                    <div class="font-semibold">£5.00</div>
                </div>
                <div class="border rounded-lg p-4 stat-card">
                    <div class="text-gray-600 text-sm mb-1">Assignments Completed</div>
                    <div class="font-semibold">23 this month</div>
                </div>
            </div>
        </div>
        
        <div class="grid md:grid-cols-2 gap-6">
            <div class="bg-white rounded-lg shadow-md p-6">
                <h2 class="text-xl font-semibold mb-4">Connected Platforms</h2>
                <ul class="space-y-4">
                    <li class="flex items-center justify-between border-b pb-3">
                        <div class="flex items-center">
                            <i class="fas fa-calculator text-indigo-600 mr-3"></i>
                            <span>SparxMaths</span>
                        </div>
                        <span class="bg-green-100 text-green-800 px-2 py-1 rounded-full text-xs">Connected</span>
                    </li>
                    <li class="flex items-center justify-between border-b pb-3">
                        <div class="flex items-center">
                            <i class="fas fa-book text-indigo-600 mr-3"></i>
                            <span>Educake</span>
                        </div>
                        <span class="bg-green-100 text-green-800 px-2 py-1 rounded-full text-xs">Connected</span>
                    </li>
                    <li class="flex items-center justify-between">
                        <div class="flex items-center">
                            <i class="fas fa-language text-indigo-600 mr-3"></i>
                            <span>LanguageGym</span>
                        </div>
                        <a href="/dashboard/connect" class="text-indigo-600 hover:text-indigo-800 text-sm">Connect</a>
                    </li>
                </ul>
                <button class="mt-6 text-indigo-600 hover:text-indigo-800 text-sm font-medium">
                    <i class="fas fa-cog mr-1"></i> Manage Connections
                </button>
            </div>
            
            <div class="bg-white rounded-lg shadow-md p-6">
                <h2 class="text-xl font-semibold mb-4">Recent Activity</h2>
                <ul class="space-y-3">
                    <li class="flex items-start pb-3 border-b activity-item rounded p-2">
                        <i class="fas fa-check-circle text-green-500 mt-1 mr-3"></i>
                        <div>
                            <p class="text-gray-700">SparxMaths Algebra Assignment completed</p>
                            <p class="text-xs text-gray-500">Today, 2:45 PM • Score: 100%</p>
                        </div>
                    </li>
                    <li class="flex items-start pb-3 border-b activity-item rounded p-2">
                        <i class="fas fa-check-circle text-green-500 mt-1 mr-3"></i>
                        <div>
                            <p class="text-gray-700">Educake Biology Quiz completed</p>
                            <p class="text-xs text-gray-500">Yesterday, 9:12 AM • Score: 95%</p>
                        </div>
                    </li>
                    <li class="flex items-start activity-item rounded p-2">
                        <i class="fas fa-clock text-blue-500 mt-1 mr-3"></i>
                        <div>
                            <p class="text-gray-700">New SparxMaths assignment detected</p>
                            <p class="text-xs text-gray-500">Yesterday, 4:30 PM • Scheduled for completion</p>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <script>
        // Dashboard specific JavaScript
        document.addEventListener('DOMContentLoaded', () => {
            // Add pulse animation to new assignments
            const newAssignments = document.querySelectorAll('.fa-clock');
            newAssignments.forEach(icon => {
                setInterval(() => {
                    icon.classList.add('animate-pulse');
                    setTimeout(() => {
                        icon.classList.remove('animate-pulse');
                    }, 1000);
                }, 2000);
            });
        });
    </script>
{{/inline}}
