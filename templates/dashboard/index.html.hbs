{{#*inline "page"}}
    <div class="py-6">
        <h1 class="text-3xl font-bold text-center text-gray-800 mb-6">Your Dashboard</h1>
        
        <div class="bg-white rounded-lg shadow-md p-6 mb-6">
            <h2 class="text-2xl font-semibold mb-4">Quick Actions</h2>
            <div class="flex flex-wrap gap-4">
                <a href="/dashboard/new-order" class="inline-flex items-center bg-indigo-600 text-white hover:bg-indigo-700 py-2 px-4 rounded-lg">
                    <i class="fas fa-plus mr-2"></i> Create New Order
                </a>
                <a href="/dashboard/orders" class="inline-flex items-center bg-gray-600 text-white hover:bg-gray-700 py-2 px-4 rounded-lg">
                    <i class="fas fa-list mr-2"></i> View Orders
                </a>
            </div>
        </div>
        
        <div class="grid md:grid-cols-2 gap-6">
            <div class="bg-white rounded-lg shadow-md p-6">
                <h2 class="text-xl font-semibold mb-4">Recent Orders</h2>
                <p class="text-gray-700">No recent orders found.</p>
                <!-- This would be populated with actual data in a real implementation -->
            </div>
            
            <div class="bg-white rounded-lg shadow-md p-6">
                <h2 class="text-xl font-semibold mb-4">Quick Stats</h2>
                <div class="grid grid-cols-2 gap-4">
                    <div class="bg-indigo-100 p-4 rounded-lg text-center">
                        <p class="text-2xl font-bold text-indigo-700">0</p>
                        <p class="text-gray-700">Pending Orders</p>
                    </div>
                    <div class="bg-green-100 p-4 rounded-lg text-center">
                        <p class="text-2xl font-bold text-green-700">0</p>
                        <p class="text-gray-700">Completed Orders</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/inline}}
{{~> layouts/base title="Your Dashboard"~}}